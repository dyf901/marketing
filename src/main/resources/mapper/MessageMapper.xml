<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zty.marketing.dao.MessageDao">
    <!--增加留言信息-->
    <insert id="add_message" parameterType="java.util.Map">
        insert into message (`name`,`phone`,`email`,`content`,`createtime`) values (#{name},#{phone},#{email},#{content},now())
    </insert>

    <!--分页模糊查询留言信息-->
    <select id="find_message" parameterType="java.util.Map" resultType="com.zty.marketing.entity.Message">
        <bind name="page" value="pageSize*(pageNo-1)"></bind>
        select * from message
        <where>
            <if test="content!=null and content!=''">
                content like concat("%",#{content},"%")
            </if>
        </where>
        order by id DESC
        limit #{page},#{pageSize}
    </select>

    <!--统计总数-->
    <select id="total" parameterType="java.util.Map" resultType="long">
        select count(*) from message
        <where>
            <if test="content!=null and content!=''">
                content like concat("%",#{content},"%")
            </if>
        </where>
    </select>
</mapper>